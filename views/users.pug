<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        title Document
        link(rel="stylesheet" type="text/css" href='/../public/styles.css')

        style
            include style.css


    body
        div
            div(class = "userList" style="display:flex;") 
                div
                    a(href="/users/sort/id/asc") sort asc
                    a(href="/users/sort/id/desc") sort desc
                div
                    a(href="/users/sort/first_name/asc") sort asc
                    a(href="/users/sort/first_name/desc") sort desc
                div
                    a(href="/users/sort/last_name/asc") sort asc
                    a(href="/users/sort/last_name/desc") sort desc
                div
                    a(href="/users/sort/email/asc") sort asc
                    a(href="/users/sort/email/desc") sort desc
                div
                    a(href="/users/sort/age/asc") sort asc
                    a(href="/users/sort/age/desc") sort desc

        div
            div(class = "userList" style="display:flex;") 
                div UserID
                div first
                div last
                div email
                div age
                div update
                div delete

        each user in users
            div(style="display:flex;" class="userList") 
                div=user.id
                div=user.first_name
                div=user.last_name
                div=user.email
                div=user.age
                div
                    a(href="/users/update/"+user.id) update
                div
                    a(href="/users/delete/"+user.id) delete

        a(href="/" style="margin-right: 20px") Add Another
        a(href="/" style="margin-right: 20px") Home

